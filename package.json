{
  "name": "figma-to-claude-export",
  "version": "1.0.0",
  "description": "Export Figma designs to optimized JSON format for Claude AI",
  "scripts": {
    "build": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es6 && cp src/ui.html dist/ui.html",
    "watch": "esbuild src/code.ts --bundle --outfile=dist/code.js --target=es6 --watch",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,html,css,json}\""
  },
  "devDependencies": {
    "@figma/plugin-typings": "^1.100.2",
    "esbuild": "0.25.0",
    "prettier": "^3.7.4",
    "typescript": "^5.7.2"
  }
}
